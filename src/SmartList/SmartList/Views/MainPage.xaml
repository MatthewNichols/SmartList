<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartList.Views.MainPage">
  <StackLayout>
    <Label Text="Display Person" HorizontalOptions="Center" FontSize="64" />
    <ListView x:Name="list" ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}" >
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Orientation="Horizontal">
              <Label Text="{Binding FullName}" FontSize="12"/>
              <Label Text="{Binding Email}" FontSize="10"/>
            </StackLayout>
          </ViewCell>
        </DataTemplate>  
      </ListView.ItemTemplate>
    </ListView>
    
  </StackLayout>
</ContentPage>